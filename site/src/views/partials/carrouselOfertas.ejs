                        <form class="d-inline" action="/products/agregarAlCarrito/<%= producto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <a href="/products/detail/<%= producto.id %>"><button type="button"
                                class="btn btn-outline-dark">Ver</button></a>
                        <a><button class="btn  btn-dark btn-carrito"
                                style="background-color: #4d582a;"
                                value="25" type="submit" >Carrito</button></a>
                    </form>
                </div> -->
            </div>
            </div>
        </div>
      <% }}) %>
    </div>