<!DOCTYPE html>
<html lang="es">
<%- include('partials/head')  %> 
<body>
    <%- include('partials/header')  %> 
    <div class="container my-3 montserrat">
        <section>

            <!--caja que contiene todos los productos de la ultima visita-->
            <div class="row productos">

                <!--caja que contiene el titulo de la sección-->
                <div class="titulo col-12">
                    <h5 class="titleSection card-header text-center">
                        <%= title %> 
                    </h5>
                </div>
                <!--recorro los productos basados en la ultima visita con un forEach-->
                <% productos.forEach(producto => { %>

                    <!--caja de la grilla de bootstrap-->
                    <div class="col-12 col-md-6 col-lg-4 my-2">

                        <!--caja que muestra la información del producto-->
                        <div class="contenido">

                            <!--ETIQUETA SEMANTICA-->
                            <figure class="text-center p-3">
                                <a href="/products/detail/<%= producto.id %> ">
                                    <img style="max-width: 100%;" src="/img/products/<%- producto.image %>  " alt=" ">
                                </a>
                            </figure>

                            <!--informacion-->
                            <article class="text-center">
                                <!--nombre del producto ??-->
                                <p>
                                    <%- producto.name %>
                                </p>
                                <!--precio-->
                                <h2 class="d-inline">$
                                    <%- (producto.price) %>
                                </h2>
                                <!--descuento-->
                                <% if (producto.discount !=0) { %>
                                    <span><%- producto.discount %> % OFF</span>
                                <% } %>
                                
                                <!--icono de envío-->
                                <i class="fas fa-truck "></i>

                                <!--botones ver y comprar-->
                                <div class="d-block m-3">
                                <button type="button" class="btn btn-outline-dark">Ver</button>
                                <button type="button" class="btn btn-dark">Comprar</button>
                                </div>
                            </article>
                        </div>
                        <!--finaliza contenido-->

                    </div>
                    <!--finaliza caja de grilla de boostrap-->

                    <% }) %>
            </div>
            <!--finaliza el div.row-->

        </section>

    </div>



    
    <%- include('partials/footer')  %> 

</body>
</html>