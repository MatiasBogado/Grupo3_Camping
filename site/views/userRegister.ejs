<%- include('partials/head.ejs') %>

<body>
    <!-- Header -->
    <%- include('partials/header.ejs') %>
    <!--=============================
    =            Content            =
    ==============================-->
    <main class="mainRegister montserrat">
        <div>
            <div class="container my-5">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-12 col-lg-8 px-0 pb-3" style="border: 2px solid #e2ddf1; border-radius: 10px;">
                        <h5 class="titleSection card-header text-center p-1" style="border-top-left-radius: 10px;
                        border-top-right-radius: 10px;">Crear Cuenta</h5>
                        <form style="padding-left: 15px; padding-right: 15px" class="mt-3">
                            <div class="row form-group">
                                <label for="nombre" class="col-form-label col-md-4 ">Nombre:</label>
                                <div class="col-md-8">
                                    <input type="text" name="nombre" value="" id="nombre" class="form-control">
                                </div>
                            </div>
                            <div class="row form-group">
                                <label for="nombre" class="col-form-label col-md-4 ">Apellido:</label>
                                <div class="col-md-8">
                                    <input type="text" name="Apellido" value="" id="Apellido" class="form-control">
                                </div>
                            </div>
                            <div class="row form-group">
                                <label for="nombre" class="col-form-label col-md-4 ">E-mail:</label>
                                <div class="col-md-8">
                                    <input type="email" name="E-mail" value="" id="E-mail" class="form-control">
                                </div>
                            </div>
                            <div class="row form-group">
                                <label for="Contraseña" class="col-form-label col-md-4 ">Contraseña:</label>
                                <div class="col-md-8">
                                    <input type="password" name="Contraseña" value="" id="Contraseña"
                                        class="form-control">
                                </div>
                            </div>
                            <div class="row form-group">
                                <label for="nombre" class="col-form-label col-md-4 ">Confirmar Contraseña:</label>
                                <div class="col-md-8">
                                    <input type="password" name="Confirmar Contraseña" value=""
                                        id="Confirmar Contraseña" class="form-control">
                                </div>
                            </div>
                            <div class="form-group form-check text-center">
                                  <input type="checkbox" class="form-check-input" id="exampleCheck1" name="recordar">
                                  <label class="form-check-label" for="exampleCheck1">Acepto los terminos y condiciones</label>
                            </div>
                            <div class="row justify-content-center align-items-center">
                                <div class="text-center">
                                    <button class="register btn btn-outline-dark"  type="submit">REGISTRARME</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!--====  End of Content  ====-->
    <!-- footer -->
    <%- include('partials/footer.ejs') %>
    <!-- scripts -->
    <%- include('partials/scripts.ejs') %>
</body>

</html>